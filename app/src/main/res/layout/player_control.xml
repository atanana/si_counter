<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingEnd="@dimen/player_control_padding"
    android:paddingStart="@dimen/player_control_padding">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/player_name_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_score"
        android:layout_width="@dimen/player_control_score_button_size"
        android:layout_height="@dimen/player_control_score_button_size"
        android:text="@string/add_score" />

    <TextView
        android:id="@+id/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_score"
        android:textSize="@dimen/player_score_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/subtract_score"
        android:layout_width="@dimen/player_control_score_button_size"
        android:layout_height="@dimen/player_control_score_button_size"
        android:text="@string/subtract_score" />
</LinearLayout>